{
  "manifest_version": 2,
  "name": "JSON Lite",
  "version": "0.17",
  "author" : "Lauri Rooden",
  "description": "Fast JSON viewer - highlights, shows items count/size, handles large files",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "32": "icon32.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
