{
  "manifest_version": 2,
  "name": "JSON Lite",
  "version": "0.15",
  "author" : "Lauri Rooden",
  "description": "Fast JSON viewer - highlights, shows items count/size, handles large files",
  "browser_action": {
    "default_popup": "README.html"
  },
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "32": "icon32.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
